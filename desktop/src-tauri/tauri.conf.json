{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Zeiterfassung (WTM)",
    "version": "1.4.2"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "window": {
        "setSize": true,
        "setTitle": true
      },
      "shell": {
        "execute": false,
        "open": false
      }
    },
    "windows": [
      {
        "title": "Arbeitszeitmanagement",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "de.mathisburger.worktimemanagement",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "windows": {
        "installMode": "passive"
        },
        "active": true,
        "endpoints": [
          "https://raw.githubusercontent.com/MathisBurger/wtm/main/desktop/latest-release.json"
        ],
        "dialog": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhBQUJGNzBFRkM3NThDM0MKUldROGpIWDhEdmVyaWo0bExMSXB3QlRWQU9rcVBiakFJWFJFMXBlK0M5RFBpMTZpMUg5K25hQXUK"
    }
  }
}
