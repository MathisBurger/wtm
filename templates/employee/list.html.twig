{% extends 'navbarBase.html.twig' %}


{% block body %}
    <div class="container mt-5">
        <h1>Mitarbeiter Ãœbersicht</h1>
        <a class="btn btn-primary" href="{{ path("employee_create") }}">Neu anlegen</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Benutzername</th>
                <th scope="col">Vorname</th>
                <th scope="col">Nachname</th>
                <th scope="col">Wochen-Soll (Stunden)</th>
                <th scope="col">Aktionen</th>
            </tr>
            </thead>
            <tbody>
            {% for employee in employees %}
                <tr>
                    <th scope="row">{{ employee.getId() }}</th>
                    <td>{{ employee.getUsername() }}</td>
                    <td>{{ employee.getFirstName() }}</td>
                    <td>{{ employee.getLastName() }}</td>
                    <td>{{ employee.getTargetWorkingHours() }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path("employee_details", {id: employee.getId()}) }}" class="btn btn-sm btn-primary">Details</a>
                            <a href="{{ path("employee_update", {id: employee.getId()}) }}" class="btn btn-sm btn-primary">Bearbeiten</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}