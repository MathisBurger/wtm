{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container" style="align-items: center; justify-content: center; display: flex">
        <div class="card" style="top: 10vh; width: 50%">
            <div class="card-content">
                <form method="post" style="margin: 1em">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">{{ 'title.login'|trans }}</h1>
                    <label for="username">Benutzername</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    <label for="password" style="margin-top: 0.5em">Passwort</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn btn-primary" type="submit" style="margin-top: 0.5em">
                        {{ 'title.login'|trans }}
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
