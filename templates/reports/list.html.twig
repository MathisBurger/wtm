{% extends 'navbarBase.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ 'title.reports'|trans }}</h1>
        <div class="alert alert-info">
            {{ 'notice.reports'|trans }}
        </div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">{{ 'table.timePeriod'|trans }}</th>
                <th scope="col">{{ 'table.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for report in reports %}
                <tr>
                    <td>{{ report }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path("report_generate", {period: report}) }}" class="btn btn-sm btn-primary">{{ 'actions.open'|trans }}</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}