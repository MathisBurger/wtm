{% extends 'navbarBase.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Sondertag anlegen</h1>
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}
        {{ form(form) }}
    </div>
    <script>
        const logic = (e) => {
            if (e.target.checked) {
                document.getElementById('endDateLabel').style = "display: block";
                document.getElementById('worktime_special_day_skeleton_endDate').style = "display: block";
                document.getElementById('worktime_special_day_skeleton_endDate').required = true;
            } else {
                document.getElementById('endDateLabel').style = "display: none";
                document.getElementById('worktime_special_day_skeleton_endDate').style = "display: none";
                document.getElementById('worktime_special_day_skeleton_endDate').required = false;
            }
        };
        document.getElementById('worktime_special_day_skeleton_isMuliDay').addEventListener('change', logic);
        if (document.getElementById('worktime_special_day_skeleton_isMuliDay').checked) {
            logic({target: {checked: true}});
        } else {
            logic({target: {checked: false}});
        }
    </script>
{% endblock %}