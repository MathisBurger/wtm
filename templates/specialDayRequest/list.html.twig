{% extends 'navbarBase.html.twig' %}


{% block body %}
    <div class="container mt-5">
        <h1>Sondertag Antr√§ge</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{ 'table.username'|trans }}</th>
                <th scope="col">{{ 'table.startDate'|trans }}</th>
                <th scope="col">{{ 'table.endDate'|trans }}</th>
                <th scope="col">{{ 'table.notes'|trans }}</th>
                <th scope="col">{{ 'table.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for request in requests %}
                <tr>
                    <th scope="row">{{ request.getId() }}</th>
                    <td>{{ request.getEmployee().getUsername() }}</td>
                    <td>{{ request.getStartDateString() }}</td>
                    <td>{{ request.getEndDateString() }}</td>
                    <td>{{ request.getNotes() }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path("employee_details", {id: request.getId()}) }}" class="btn btn-sm btn-primary">{{ 'actions.details'|trans }}</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}